<% include ../partials/header %>
<div class="container-fluid">
    <h1 style="text-align: center; color: white;">Edit</h1>
    <div class="row">
        <div style="width: 60%; margin: 25px auto;">
            <form action="/articles/<%=article._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= article.title %>" name="article[title]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= article.image %>" name="article[image]">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text"  name="article[content]"><%= article.content%></textarea>
                </div>
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>