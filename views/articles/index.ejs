<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to articulate</h1>
        <p>
            Share your experiences, stories and views
        </p>
        <p>
            <a class="btn btn-lg btn-primary" href="/articles/new">Post Something</a>
        </p>
    </header>
    <div>
        <% articles.forEach(function(article){ %>
        <div class="card">
          <img class="card-img-top" src="<%=article.image%>" alt="Card image cap">
          <div class="card-body">
            <h4 class="card-title text-center"><%= article.title %></h5>
            <p class="card-text"><%- article.content.substring(0,500) %>...</p>
            <p class="card-text text-right"><em>By <%= article.author.username %></em></p>
            <a href="/articles/<%=article._id%>" class="btn btn-info show-button">Read More</a>
          </div>
        </div>
    <% }); %>
    </div>
</div>

<% include ../partials/footer %>