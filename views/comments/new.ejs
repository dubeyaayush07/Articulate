<% include ../partials/header %>



<div class="container-fluid">
    <h1 style="text-align: center; color: white;">Add a New Comment</h1>
    <div class="row">
        <div style="width: 60%; margin: 25px auto;">
            <form action="/articles/<%=article._id%>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control comment-area" type="text" placeholder="Content" name="comment[text]"></textarea>
                </div>
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>